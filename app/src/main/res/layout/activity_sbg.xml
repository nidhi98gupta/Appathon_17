<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.delli5547.appathon17.SBG">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btnCalendar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#428bca"
            android:text="CAlendar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnInventory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#ea4c"
            android:text="Inventory"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnSlotBooking"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#ea4c23"
            android:text="Slot Booking"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnComplaints"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#26ae50"
            android:text="Complaints"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnStudent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#ffb420"
            android:text="Student Profile"
            android:textColor="@color/white" />


        <!-- Link to Login Screen -->

    </LinearLayout>


</LinearLayout>

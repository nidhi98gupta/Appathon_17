<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="181dp"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:text="Nidhi Gupta"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:text="9490120102"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:background="@drawable/ic_call_black_24dp"
                android:layout_marginTop="15dp"
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/student_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="201601048"
                android:textSize="18dp" />

            <View
                android:id="@+id/view5"
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:background="#000000"></View>

            <TextView
                android:id="@+id/room_no"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="J-103"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ExpertiseText"
                android:layout_width="108dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:text="Expertise"
                android:textSize="17dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:background="#000000"></View>

            <TextView
                android:id="@+id/expertise"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="Everything"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/InterestText"
                android:layout_width="108dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:text="Interest"
                android:textSize="17dp" />

            <View
                android:id="@+id/view4"
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:background="#000000"></View>

            <TextView
                android:id="@+id/interest"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="Everything"
                android:textSize="18dp" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>